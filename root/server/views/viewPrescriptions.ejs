<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Prescription Management</title>
  <style>
    body {
      background-color: #b3e5fc;
      color: #212121;
      font-family: Arial, sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
    }

    .filters {
      background-color: #ffffff;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
    }

    .prescription-list {
      background-color: #0288d1;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
      width: 80%;
      text-align: center;
      overflow: auto;
    }

    .prescription-item {
      background-color: #ffffff;
      color: #212121;
      padding: 10px;
      margin: 10px 0;
      border-radius: 5px;
    }

    .error-message {
      color: #ff0000;
    }
  </style>
</head>

<body>
  <div class="filters">
    <h3>Filter Prescriptions:</h3>
    <form id="filterForm">
      <label for="doctor">Doctor:</label>
      <input type="text" id="doctor" name="doctor">

      <label for="date">Date:</label>
      <input type="date" id="date" name="date">

      <label for="isFilled">Filled:</label>
      <select id="isFilled" name="isFilled">
        <option value="">All</option>
        <option value="true">Filled</option>
        <option value="false">Unfilled</option>
      </select>

      <button type="submit">Apply Filters</button>
    </form>
  </div>

  <div class="prescription-list">
    <h1>Prescription List</h1>
    <div id="prescriptions-container">
      <% prescriptions.forEach(prescription => { %>
        <div class="prescription-item">
          <h2>Medication: <%= prescription.medication %></h2>
          <p>Dosage: <%= prescription.dosage %></p>
          <p>Is Filled: <%= prescription.isFilled %></p>
          <p>Date: <%= prescription.date %></p>
          <p>Notes: <%= prescription.notes %></p>
        </div>
        <br>
      <% }); %>
    </div>
    <p class="error-message" id="error-message"></p>
  </div>

  <script>
    // Your JavaScript code here
  </script>

</body>

</html>
