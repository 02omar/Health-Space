<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Patient</title>
    <style>
        body {
            background-color: #b3e5fc; /* Light Primary Color */
            color: #212121; /* Primary Text Color */
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        .delete-Patient-container {
            background-color: #085883; /* Dark Primary Color */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        input[type="text"] {
            width: calc(100% - 30px);
            padding: 8px;
            border: 1px solid #ffffff; /* Text/Icons Color */
            border-radius: 5px;
            background-color: transparent;
            color: #212121; /* Text/Icons Color */
            margin-top: 10px;
        }

        button {
            background-color: #03a9f4; /* Primary Color */
            color: #ffffff; /* Text/Icons Color */
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 20px;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #448aff;
        }

        .feedback-message {
            margin-top: 20px;
            font-size: 18px;
        }
    </style>
</head>

<body>
    <div class="delete-Patient-container">
        <h2>Delete Patient</h2>
        <form id="deletePatientForm">
            <input type="text" name="username"  placeholder="Patient Username" required><br>
            <button type="submit">Delete Patient</button>
        </form>
        <div id="feedbackMessage"></div>

        <script>
            document.getElementById("deletePatientForm").addEventListener("submit", async function (event) {
                event.preventDefault();
                const formData = new FormData(this);
                console.log(formData.get('username'));
                try {
                    const response = await fetch("admins/deletePatient", {
                        method: "DELETE",
                        body: formData
                    });
                    const data = await response.json();
                    const feedbackMessage = document.getElementById("feedbackMessage");
                    if (response.status === 200) {
                        feedbackMessage.innerHTML = `<p class="success-message">${data.message}</p>`;
                    } else {
                        feedbackMessage.innerHTML = `<p class="error-message">${data.message}</p>`;
                    }
                } catch (error) {
                    console.error("Error:", error);
                }
            });
        </script>
    </div>
</body>

</html>
