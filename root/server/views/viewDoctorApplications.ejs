<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <style>
    body {
      background-color: #b3e5fc;
      color: #212121;
      font-family: Arial, sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
    }

    .doctor-list {
      background-color: #0288d1;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
      width: 80%;
      text-align: center;
      overflow: auto;
    }

    .doctor-item {
      background-color: #ffffff;
      color: #212121;
      padding: 10px;
      margin: 10px 0;
      border-radius: 5px;
    }

    .error-message {
      color: #ff0000;
    }
  </style>
</head>

<body>
  <div class="doctor-list">
    <h1>Unregistered Doctor Applications</h1>
    <div id="doctors-container"></div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      fetch("/admins/viewUnregisteredDoctors")
        .then(response => response.json())
        .then(data => {
          const doctorsContainer = document.getElementById("doctors-container");
          if (data.status === "success" && data.data.doctor.length > 0) {
            data.data.doctor.forEach(doctor => {
              const doctorItem = document.createElement("div");
              doctorItem.className = "doctor-item";
              doctorItem.innerHTML = `
                <h2>${doctor.fName} ${doctor.lName}</h2>
                <p>Username: ${doctor.username}</p>
                <p>Email: ${doctor.email}</p>
                <p>Date of Birth: ${new Date(doctor.dateOfBirth).toLocaleDateString()}</p>
                <p>Education: ${doctor.educationalBackground}</p>
                <p>Hourly Rate: ${doctor.hourlyRate}</p>
                <p>Affiliation: ${doctor.affiliation}</p>
                <p>Specialty: ${doctor.specialty}</p>
              `;
              doctorsContainer.appendChild(doctorItem);
            });
          } else {
            const errorMessage = document.createElement("p");
            errorMessage.className = "error-message";
            errorMessage.textContent = "No unregistered doctors found.";
            doctorsContainer.appendChild(errorMessage);
          }
        })
        .catch(error => {
          console.error(error);
          const errorMessage = document.createElement("p");
          errorMessage.className = "error-message";
          errorMessage.textContent = "Error occurred while fetching data.";
          document.getElementById("doctors-container").appendChild(errorMessage);
        });
    });
  </script>
</body>

</html>
